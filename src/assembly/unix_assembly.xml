<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>unix</id>
	<formats>
		<format>tar.gz</format>
		<format>dir</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>.</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>LICENSE.txt</include>
				<include>NOTICE.txt</include>
				<include>README.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>lib/lpsolve/*.so</include>
				<include>lib/lpsolve/LICENSE.LPSOLVE.txt</include>
				<include>tools/mpsat/LICENSE.MPSAT</include>
				<include>tools/mpsat/mpsat</include>
				<include>tools/pcomp/LICENSE.PCOMP</include>
				<include>tools/pcomp/pcomp</include>
				<include>tools/petrify/LICENSE.PETRIFY.txt</include>
				<include>tools/petrify/petrify</include>
				<include>tools/punf/LICENSE.PUNF</include>
				<include>tools/punf/punf</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/bin</directory>
			<outputDirectory>bin</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>
</assembly>
